{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Worker Information Schema",
  "description": "외부 인력(프리랜서/일용직) 정보 스키마",
  "type": "object",
  "required": [
    "worker_id",
    "name",
    "rrn",
    "phone",
    "address",
    "bank",
    "type",
    "tax_rate"
  ],
  "properties": {
    "worker_id": {
      "type": "string",
      "pattern": "^W[0-9]{7}$",
      "description": "인력 고유번호 (W + 7자리 숫자)",
      "example": "W2024001"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "description": "성명",
      "example": "홍길동"
    },
    "rrn": {
      "type": "string",
      "pattern": "^[0-9]{6}-[0-9]\\*{6}$",
      "description": "주민등록번호 (뒷자리 마스킹)",
      "example": "900101-1******"
    },
    "phone": {
      "type": "string",
      "pattern": "^01[0-9]-[0-9]{4}-[0-9]{4}$",
      "description": "휴대폰 번호",
      "example": "010-1234-5678"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "이메일 주소",
      "example": "hong@example.com"
    },
    "address": {
      "type": "string",
      "minLength": 10,
      "description": "주소",
      "example": "서울특별시 강남구 테헤란로 123"
    },
    "bank": {
      "type": "object",
      "required": ["name", "account", "holder"],
      "properties": {
        "name": {
          "type": "string",
          "description": "은행명",
          "example": "국민은행"
        },
        "account": {
          "type": "string",
          "pattern": "^[0-9]{3}-[0-9]{6}-[0-9]{5,6}$",
          "description": "계좌번호",
          "example": "123-456-789012"
        },
        "holder": {
          "type": "string",
          "description": "예금주",
          "example": "홍길동"
        }
      }
    },
    "type": {
      "type": "string",
      "enum": ["freelancer", "daily_worker", "contractor"],
      "description": "인력 유형",
      "example": "freelancer"
    },
    "tax_rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "세율 (%)",
      "example": 3.3
    },
    "registration_date": {
      "type": "string",
      "format": "date",
      "description": "등록일",
      "example": "2024-01-15"
    },
    "business_registration_number": {
      "type": "string",
      "pattern": "^[0-9]{3}-[0-9]{2}-[0-9]{5}$",
      "description": "사업자등록번호 (개인사업자인 경우)",
      "example": "123-45-67890"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "suspended"],
      "default": "active",
      "description": "상태"
    },
    "notes": {
      "type": "string",
      "description": "비고"
    }
  }
}