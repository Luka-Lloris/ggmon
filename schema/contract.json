{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contract Information Schema",
  "description": "계약 정보 스키마",
  "type": "object",
  "required": [
    "contract_id",
    "worker_id",
    "contract_date",
    "start_date",
    "end_date",
    "work_description",
    "payment",
    "template"
  ],
  "properties": {
    "contract_id": {
      "type": "string",
      "pattern": "^C[0-9]{7}$",
      "description": "계약 고유번호 (C + 7자리 숫자)",
      "example": "C2024001"
    },
    "worker_id": {
      "type": "string",
      "pattern": "^W[0-9]{7}$",
      "description": "인력 고유번호",
      "example": "W2024001"
    },
    "contract_date": {
      "type": "string",
      "format": "date",
      "description": "계약 체결일",
      "example": "2024-01-15"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "계약 시작일",
      "example": "2024-02-01"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "계약 종료일",
      "example": "2024-07-31"
    },
    "work_location": {
      "type": "string",
      "description": "근무 장소",
      "example": "서울 본사 또는 원격"
    },
    "work_description": {
      "type": "string",
      "minLength": 10,
      "description": "업무 내용",
      "example": "웹 애플리케이션 프론트엔드 개발"
    },
    "payment": {
      "type": "object",
      "required": ["total_amount", "payment_cycle", "tax_rate"],
      "properties": {
        "total_amount": {
          "type": "number",
          "minimum": 0,
          "description": "총 보수 (원)",
          "example": 5000000
        },
        "payment_cycle": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "lump_sum"],
          "description": "지급 주기",
          "example": "monthly"
        },
        "payment_day": {
          "type": "integer",
          "minimum": 1,
          "maximum": 31,
          "description": "지급일 (매월)",
          "example": 25
        },
        "method": {
          "type": "string",
          "enum": ["계좌이체", "현금", "수표"],
          "default": "계좌이체",
          "description": "지급 방법"
        },
        "tax_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "원천징수율 (%)",
          "example": 3.3
        },
        "net_amount": {
          "type": "number",
          "minimum": 0,
          "description": "실수령액 (원, 자동계산)",
          "example": 4835000
        }
      }
    },
    "template": {
      "type": "string",
      "enum": [
        "freelancer_contract.md",
        "daily_worker_contract.md",
        "contractor_contract.md"
      ],
      "description": "사용할 계약서 템플릿",
      "example": "freelancer_contract.md"
    },
    "nda_required": {
      "type": "boolean",
      "default": false,
      "description": "비밀유지계약 필요 여부"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "completed", "terminated"],
      "default": "draft",
      "description": "계약 상태"
    },
    "renewal_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "갱신 횟수"
    },
    "parent_contract_id": {
      "type": "string",
      "pattern": "^C[0-9]{7}$",
      "description": "이전 계약 ID (갱신인 경우)"
    },
    "notes": {
      "type": "string",
      "description": "비고"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "첨부 파일 목록"
    }
  }
}